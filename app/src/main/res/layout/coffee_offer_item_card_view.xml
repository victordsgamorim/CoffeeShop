<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/menu_item_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/menu_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/menu_item_image"
            app:layout_constraintEnd_toEndOf="@+id/menu_item_image"
            app:layout_constraintHorizontal_bias="0.032"
            app:layout_constraintStart_toStartOf="@+id/menu_item_image"
            app:layout_constraintTop_toTopOf="@+id/menu_item_image"
            app:layout_constraintVertical_bias="0.357" />

        <TextView
            android:id="@+id/menu_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/menu_item_name"
            app:layout_constraintStart_toStartOf="@+id/menu_item_name"
            app:layout_constraintEnd_toEndOf="@+id/menu_item_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
           />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>